{
    "compilerOptions": {
        "module": "amd",
        "sourceMap": true,
        "noUnusedLocals": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ],
        "target": "es5",
        "moduleResolution": "node",
        "types": [
            "react",
            "react-dom",
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}